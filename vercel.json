{
    "builds": [
      {
        "src": "backhand/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/dist" }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backhand/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/dist/$1"
      }
    ]
  }
  